<%- if controller_name != 'sessions' %>
  <p class="mar-bottom-half">Du hast schon einen Account?</p>
  <%= link_to "Einloggen", new_session_path(resource_name), class: 'inline-link' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="mar-bottom-half">Du hast noch keinen Account?</p>
  <%= link_to "Registrieren", new_registration_path(resource_name), class: 'inline-link' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Passwort vergessen?", new_password_path(resource_name), class: 'inline-link' %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "BestÃ¤tiguns Mail nicht erhalten?", new_confirmation_path(resource_name), class: 'inline-link' %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: 'inline-link' %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'inline-link' %><br />
  <% end %>
<% end %>
